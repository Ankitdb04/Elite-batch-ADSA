import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
        Scanner sc=new Scanner(System.in);
        int t=sc.nextInt();
        while(t-->0){
            long n=sc.nextLong();
            long k=sc.nextLong();
            if(n<2*k) {
                System.out.println("NO");
                continue;
            }
            long c=n-2*(k-1);
            if(c%4==1 || c%4==2){
                System.out.println("YES");
            }
            else{
                System.out.println("NO");
            }
        }
	}
}
